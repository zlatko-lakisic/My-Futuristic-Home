# --- Registry & Versions ---
REGISTRY=exadel/
ADMIN_VERSION=1.2.0
API_VERSION=1.2.0
FE_VERSION=1.2.0
CORE_VERSION=1.2.0
POSTGRES_VERSION=1.2.0

# --- Database Settings (CompreFace/Postgres) ---
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD={POSTGRES_PASSWORD}
POSTGRES_DB=frs
POSTGRES_DOMAIN=compreface-postgres-db
POSTGRES_PORT=5432
SAVE_IMAGES_TO_DB=true

# --- Email Configuration ---
EMAIL_HOST=smtp.gmail.com
EMAIL_USERNAME={EMAIL_USER}
EMAIL_FROM={EMAIL_FROM_ADDRESS}
EMAIL_PASSWORD={EMAIL_APP_PASSWORD}
ENABLE_EMAIL_SERVER=false

# --- Resource Allocation & Performance ---
COMPREFACE_API_JAVA_OPTIONS=-Xmx4g
COMPREFACE_ADMIN_JAVA_OPTIONS=-Xmx1g
MAX_FILE_SIZE=5MB
MAX_REQUEST_SIZE=10M
MAX_DETECT_SIZE=640
UWSGI_PROCESSES=2
UWSGI_THREADS=1
CONNECTION_TIMEOUT=10000
READ_TIMEOUT=60000

# --- Messaging & Metrics (MQTT / InfluxDB) ---
MQTT_USERNAME={MQTT_USER}
MQTT_PASSWORD={MQTT_PASSWORD}
INFLUXDB_TOKEN={INFLUXDB_SECRET_TOKEN}
DOCKER_INFLUXDB_INIT_PASSWORD={INFLUXDB_INIT_PASSWORD}

# --- Frigate Camera Specifics (Added for logic consistency) ---
FRIGATE_MQTT_USER={MQTT_USER}
FRIGATE_MQTT_PASSWORD={MQTT_PASSWORD}
CAMERA_USER={CAMERA_ROOT_USER}
CAMERA_PASS={CAMERA_ROOT_PASSWORD}